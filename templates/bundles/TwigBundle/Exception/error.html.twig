{% extends 'base.html.twig' %}

{% block title %}Erreur - WebDesignPro{% endblock %}

{% block body %}
<div data-controller="scroll-animation">
    <section class="error-page">
        <div class="error-container">
            <div class="error-content swiss-fade-up" data-scroll-animation-target="item">
                <span class="error-code">{{ status_code }}</span>
                <h1 class="error-title">
                    {% if status_code == 500 %}
                        Erreur serveur
                    {% elseif status_code == 403 %}
                        Accès refusé
                    {% else %}
                        Une erreur est survenue
                    {% endif %}
                </h1>
                <p class="error-description">
                    {% if status_code == 500 %}
                        Notre serveur rencontre un problème technique. Nos équipes sont sur le coup !
                    {% elseif status_code == 403 %}
                        Vous n'avez pas les permissions nécessaires pour accéder à cette page.
                    {% else %}
                        Quelque chose s'est mal passé. Veuillez réessayer plus tard.
                    {% endif %}
                </p>
                <div class="error-actions">
                    <a href="{{ path('app_home') }}" class="btn btn-lg btn-primary">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                        Retour à l'accueil
                    </a>
                    <a href="{{ path('app_contact') }}" class="btn btn-lg btn-outline">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                        </svg>
                        Nous contacter
                    </a>
                </div>
            </div>
            <div class="error-illustration swiss-fade-up" data-scroll-animation-target="item" data-delay="150">
                <svg viewBox="0 0 500 400" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="250" cy="200" r="150" fill="#f0f4f8"/>
                    <circle cx="250" cy="200" r="100" fill="#e0e7ff"/>
                    <circle cx="210" cy="180" r="15" fill="#0066ff"/>
                    <circle cx="290" cy="180" r="15" fill="#0066ff"/>
                    <path d="M210 250 Q250 280 290 250" stroke="#0066ff" stroke-width="6" stroke-linecap="round" fill="none"/>
                    <path d="M180 140 L200 160" stroke="#0066ff" stroke-width="4" stroke-linecap="round"/>
                    <path d="M200 140 L180 160" stroke="#0066ff" stroke-width="4" stroke-linecap="round"/>
                    <path d="M300 140 L320 160" stroke="#0066ff" stroke-width="4" stroke-linecap="round"/>
                    <path d="M320 140 L300 160" stroke="#0066ff" stroke-width="4" stroke-linecap="round"/>
                    <circle cx="150" cy="100" r="20" fill="#dbeafe"/>
                    <circle cx="380" cy="120" r="15" fill="#dbeafe"/>
                    <circle cx="120" cy="280" r="12" fill="#e0e7ff"/>
                    <circle cx="400" cy="300" r="18" fill="#e0e7ff"/>
                </svg>
            </div>
        </div>
    </section>
</div>
{% endblock %}
